<div class="d-flex justify-content-center align-items-center w-100" style="min-height: 29vh; background: #F9F9F9 0% 0% no-repeat padding-box;">
    <div class="col-12">
        <div class="d-flex justify-content-center align-items-center" style="width: 100%;">
            <div class="spinner-border" style="color: @animationColor; width: 50px; height: 50px;"></div>
        </div>
        <div class="d-flex justify-content-center align-items-center" style="width: 100%; margin-top: 30px;">
            <p style="text-align: center; font: 14px; letter-spacing: 0px; color: @messageColor;">
                @Message
            </p>
        </div>
    </div>
</div>

@code
{
    [Parameter]
    public string messageColor { get; set; } = "#666666";
    [Parameter]
    public string animationColor { get; set; } = "#3380c9";
    [Parameter]
    public string Message { get; set; } = "No message";
}
